{
  "name": "Remind Me",
  "version": "0.1",
  "description": "Lets you schedule reminders because doing stuff.",
  "background": {
    "scripts": ["index.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["declarativeContent", "storage", "alarms"],
  "manifest_version": 2
}
